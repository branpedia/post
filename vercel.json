{
  "version": 2,
  "builds": [
    {
      "src": "api/screenshot.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/ip.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/chat.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/screenshot",
      "dest": "/api/screenshot.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/ip",
      "dest": "/api/ip.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/chat",
      "dest": "/api/chat.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],
  "functions": {
    "api/screenshot.js": {
      "maxDuration": 30
    },
    "api/chat.js": {
      "maxDuration": 10
    }
  }
}
